<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.Penistrong.GameResourceMS.gate.login.mapper.LoginMapper">
	<select id="login" resultType="com.Penistrong.GameResourceMS.po.User">
		SELECT *
		  FROM user_accounts
		 WHERE user_id = #{user_id}
		   AND password = #{password} 
	</select>
</mapper>