<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.Penistrong.GameResourceMS.index.mapper.IndexMapper">
	<select id="getUserInfo" resultType="com.Penistrong.GameResourceMS.po.User">
		SELECT *
		  FROM user_accounts
		 WHERE user_id = #{user_id}
	</select>
	
	<select id="getPortrait" resultType="java.util.Map">
		SELECT portrait_name,upload_time
		  FROM user_moreinfos
		 WHERE resource_id = #{resource_id}
		   AND user_id = #{user_id}
	</select>
</mapper>